<Window x:Class="InternetShop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Internet Shop" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox Name="NameTextBox" PlaceholderText="Name"/>
            <TextBox Name="DescriptionTextBox" PlaceholderText="Description"/>
            <TextBox Name="PriceTextBox" PlaceholderText="Price"/>
            <TextBox Name="StockTextBox" PlaceholderText="Stock"/>
            <Button Name="AddProductButton" Content="Add Product" Click="AddProductButton_Click"/>
            <ListBox Name="ProductsListBox"/>
        </StackPanel>
    </Grid>
</Window>
